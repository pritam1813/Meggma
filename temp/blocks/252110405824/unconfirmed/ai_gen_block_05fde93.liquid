{% doc %}
  @prompt
    Announcements bar features required 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-announcement-bar-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-announcement-bar__wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
  }

  .ai-announcement-bar__content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    flex: 1;
    text-align: center;
  }

  .ai-announcement-bar__icon-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .ai-announcement-bar__icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    fill: currentColor;
  }

  .ai-announcement-bar__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    line-height: 1.4;
    font-weight: {{ block.settings.font_weight }};
  }

  .ai-announcement-bar__link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
    font-weight: 600;
    margin-left: 8px;
  }

  .ai-announcement-bar__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-announcement-bar__close-{{ ai_gen_id }} {
    position: absolute;
    right: {{ block.settings.horizontal_padding }}px;
    background: none;
    border: none;
    color: {{ block.settings.text_color }};
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .ai-announcement-bar__close-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-announcement-bar__close-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    fill: currentColor;
  }

  .ai-announcement-bar-{{ ai_gen_id }}.hidden {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .ai-announcement-bar__wrapper-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_padding | times: 0.8 }}px {{ block.settings.horizontal_padding | times: 0.8 }}px;
    }

    .ai-announcement-bar__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }

    .ai-announcement-bar__icon-{{ ai_gen_id }} svg {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-announcement-bar__close-{{ ai_gen_id }} {
      right: {{ block.settings.horizontal_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<announcement-bar-{{ ai_gen_id }}
  class="ai-announcement-bar-{{ ai_gen_id }}"
  data-dismissible="{{ block.settings.dismissible }}"
  data-block-id="{{ block.id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-announcement-bar__wrapper-{{ ai_gen_id }}">
    <div class="ai-announcement-bar__content-{{ ai_gen_id }}">
      {% if block.settings.show_icon %}
        <div class="ai-announcement-bar__icon-{{ ai_gen_id }}">
          {% case block.settings.icon_type %}
            {% when 'megaphone' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            {% when 'gift' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M20 6h-2.18c.11-.31.18-.65.18-1 0-1.66-1.34-3-3-3-1.05 0-1.96.54-2.5 1.35l-.5.67-.5-.68C10.96 2.54 10.05 2 9 2 7.34 2 6 3.34 6 5c0 .35.07.69.18 1H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-5-2c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM9 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm11 15H4v-2h16v2zm0-5H4V8h5.08L7 10.83 8.62 12 11 8.76l1-1.36 1 1.36L15.38 12 17 10.83 14.92 8H20v6z"/>
              </svg>
            {% when 'tag' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58.55 0 1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41 0-.55-.23-1.06-.59-1.42zM5.5 7C4.67 7 4 6.33 4 5.5S4.67 4 5.5 4 7 4.67 7 5.5 6.33 7 5.5 7z"/>
              </svg>
            {% when 'truck' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M18 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm1.5-9l1.96 2.5H17V9.5h2.5m-11 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5M20 8h-3V4H3c-1.11 0-2 .89-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4z"/>
              </svg>
            {% when 'star' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
              </svg>
            {% when 'info' %}
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
              </svg>
          {% endcase %}
        </div>
      {% endif %}

      <div class="ai-announcement-bar__text-{{ ai_gen_id }}">
        {{ block.settings.message }}
        {% if block.settings.link_text != blank and block.settings.link_url != blank %}
          <a href="{{ block.settings.link_url }}" class="ai-announcement-bar__link-{{ ai_gen_id }}">
            {{ block.settings.link_text }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if block.settings.dismissible %}
      <button
        class="ai-announcement-bar__close-{{ ai_gen_id }}"
        aria-label="Close announcement"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
        </svg>
      </button>
    {% endif %}
  </div>
</announcement-bar-{{ ai_gen_id }}>

<script>
  (function() {
    class AnnouncementBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.blockId = this.dataset.blockId;
        this.storageKey = `announcement-bar-dismissed-${this.blockId}`;
      }

      connectedCallback() {
        if (this.dataset.dismissible === 'true') {
          this.checkDismissedState();
          this.setupCloseButton();
        }
      }

      checkDismissedState() {
        const isDismissed = localStorage.getItem(this.storageKey);
        if (isDismissed === 'true') {
          this.classList.add('hidden');
        }
      }

      setupCloseButton() {
        const closeButton = this.querySelector('.ai-announcement-bar__close-{{ ai_gen_id }}');
        if (closeButton) {
          closeButton.addEventListener('click', () => {
            this.dismiss();
          });
        }
      }

      dismiss() {
        this.classList.add('hidden');
        localStorage.setItem(this.storageKey, 'true');
      }
    }

    customElements.define('announcement-bar-{{ ai_gen_id }}', AnnouncementBar{{ ai_gen_id }});
  })();
</script>

