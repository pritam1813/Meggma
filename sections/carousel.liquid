{% stylesheet %}
  .carousel-section {
    margin: 0;
    padding: 0;
    background-color: var(--bg-color);
    color: white;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  /* Full Width Container */
  .carousel-container {
    position: relative;
    width: 100vw;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    perspective: 1500px;
    /* Depth of the 3D space */
  }

  .carousel {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Individual Card Styles */
  .item {
    position: absolute;
    width: 300px;
    /* Base width */
    height: 400px;
    max-width: 60vw;
    /* Responsive constraint */
    border-radius: 20px;
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 5rem;
    font-weight: bold;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
    user-select: none;
    overflow: hidden;
  }

  .item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: none;
  }

  .item.active {
    border: 2px solid var(--primary-color);
    box-shadow: 0 0 30px rgba(0, 212, 255, 0.3);
  }

  /* Controls */
  .controls {
    display: flex;
    gap: 30px;
    margin-top: 40px;
    z-index: 100;
  }

  button {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    padding: 12px 24px;
    border-radius: 30px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.3s;
    backdrop-filter: blur(10px);
  }

  button:hover {
    background: var(--primary-color);
    color: black;
    transform: translateY(-2px);
  }

  button:active {
    transform: translateY(0);
  }
{% endstylesheet %}

