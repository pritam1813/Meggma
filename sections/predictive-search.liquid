{%- comment -%}
  Predictive Search Overlay Section
  Displays a search overlay with predictive search results using Shopify's API
{%- endcomment -%}

{%- comment -%} Hide native search clear button {%- endcomment -%}
<style>
  #predictive-search-input::-webkit-search-cancel-button,
  #predictive-search-input::-webkit-search-decoration,
  #predictive-search-input::-webkit-search-results-button,
  #predictive-search-input::-webkit-search-results-decoration {
    -webkit-appearance: none;
    appearance: none;
    display: none;
  }
  #predictive-search-input::-ms-clear {
    display: none;
    width: 0;
    height: 0;
  }
</style>

{%- comment -%} Search Overlay Bar {%- endcomment -%}
<div
  id="search-overlay"
  class="fixed top-0 left-0 w-full h-20 bg-white z-[100] flex items-center px-6 md:px-12 lg:px-14 shadow-sm transform transition-all duration-300 ease-in-out -translate-y-full opacity-0 invisible"
  role="dialog"
  aria-modal="true"
  aria-label="Search"
>
  <div class="w-full flex items-center relative max-w-7xl mx-auto">
    {%- comment -%} Search Icon {%- endcomment -%}
    <svg
      class="text-gray-400 absolute left-3 pointer-events-none"
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-hidden="true"
    >
      <circle cx="11" cy="11" r="8"></circle>
      <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
    </svg>

    {%- comment -%} Search Input {%- endcomment -%}
    <input
      id="predictive-search-input"
      type="search"
      name="q"
      placeholder="{{ 'general.search.placeholder' | t | default: 'Search for products, collections...' }}"
      autocomplete="off"
      autocorrect="off"
      autocapitalize="off"
      spellcheck="false"
      class="w-full pl-10 pr-12 py-3 text-lg text-gray-800 placeholder-gray-400 bg-gray-50 border-b-2 border-transparent focus:border-black focus:bg-white outline-none transition-all rounded-md"
    >

    {%- comment -%} Loading Spinner {%- endcomment -%}
    <div id="search-loading" class="absolute right-12 hidden">
      <svg
        class="animate-spin h-5 w-5 text-gray-400"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
      >
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>

    {%- comment -%} Close Button {%- endcomment -%}
    <button
      id="close-search-btn"
      type="button"
      class="absolute right-3 p-1 text-gray-500 hover:text-red-500 transition-colors"
      aria-label="Close search"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
</div>

{%- comment -%} Results Container {%- endcomment -%}
<div
  id="search-results-container"
  class="fixed top-20 left-0 w-full bg-white/95 backdrop-blur-md shadow-lg border-t border-gray-100 z-[99] overflow-hidden transition-all duration-300 ease-in-out max-h-0 opacity-0"
>
  <div class="max-w-7xl mx-auto px-6 py-6 md:px-12 lg:px-14 max-h-[70vh] overflow-y-auto">
    {%- comment -%} Results Header {%- endcomment -%}
    <h3 id="search-results-count" class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4 hidden">
      {{ 'general.search.results' | t | default: 'Results' }}
    </h3>

    {%- comment -%} Products Section {%- endcomment -%}
    <div id="search-products-section" class="hidden mb-6">
      <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        {{ 'general.search.products' | t | default: 'Products' }}
      </h4>
      <div id="search-products-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"></div>
    </div>

    {%- comment -%} Collections Section {%- endcomment -%}
    <div id="search-collections-section" class="hidden mb-6">
      <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        {{ 'general.search.collections' | t | default: 'Collections' }}
      </h4>
      <div id="search-collections-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"></div>
    </div>

    {%- comment -%} Articles Section {%- endcomment -%}
    <div id="search-articles-section" class="hidden mb-6">
      <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3 flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        {{ 'general.search.articles' | t | default: 'Articles' }}
      </h4>
      <div id="search-articles-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"></div>
    </div>

    {%- comment -%} No Results State {%- endcomment -%}
    <div id="search-not-found" class="hidden text-center py-10">
      <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 mb-3">
        <svg
          class="text-gray-400"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          <line x1="8" y1="11" x2="14" y2="11"></line>
        </svg>
      </div>
      <p class="text-gray-500 text-lg">{{ 'general.search.no_results' | t | default: 'No results found' }}</p>
      <p class="text-gray-400 text-sm">
        {{ 'general.search.no_results_hint' | t | default: 'Try checking your spelling or use different keywords.' }}
      </p>
    </div>

    {%- comment -%} Footer {%- endcomment -%}
    <div
      id="search-footer"
      class="mt-6 pt-4 border-t border-gray-100 flex justify-between text-sm text-gray-500 hidden"
    >
      <span>{{ 'general.search.esc_hint' | t | default: 'Press ESC to close' }}</span>
      <a href="{{ routes.search_url }}" id="view-all-results" class="hover:text-black transition-colors">
        {{ 'general.search.view_all' | t | default: 'View all results' }} &rarr;
      </a>
    </div>
  </div>
</div>

{%- comment -%} Backdrop {%- endcomment -%}
<div
  id="search-backdrop"
  class="fixed inset-0 top-20 bg-black/20 z-[98] transition-opacity duration-300 opacity-0 pointer-events-none"
  aria-hidden="true"
></div>

{%- comment -%} Store predictive search URL for JavaScript {%- endcomment -%}
<script>
  window.shopifyPredictiveSearch = {
    url: '{{ routes.predictive_search_url }}',
    searchUrl: '{{ routes.search_url }}',
    moneyFormat: {{ shop.money_format | json }}
  };
</script>

<script src="{{ 'predictive-search.js' | asset_url }}" defer></script>

