<!-- Delete Forms (hidden) -->
{% for address in customer.addresses %}
  {% form 'customer_address', address, id: 'delete-form-' | append: address.id %}
    <input type="hidden" name="_method" value="delete">
  {% endform %}
{% endfor %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Open form buttons
    document.querySelectorAll('[data-open-form]').forEach(function (btn) {
      btn.addEventListener('click', function () {
        const formId = this.dataset.openForm;
        const form = document.getElementById('address-form-' + formId);
        if (form) {
          form.classList.add('is-open');
        }
      });
    });

    // Close form buttons
    document.querySelectorAll('[data-close-form]').forEach(function (btn) {
      btn.addEventListener('click', function () {
        this.closest('.customer-address-form').classList.remove('is-open');
      });
    });

    // Close on backdrop click
    document.querySelectorAll('.customer-address-form').forEach(function (form) {
      form.addEventListener('click', function (e) {
        if (e.target === this) {
          this.classList.remove('is-open');
        }
      });
    });

    // Delete buttons
    document.querySelectorAll('[data-delete-address]').forEach(function (btn) {
      btn.addEventListener('click', function () {
        if (confirm(this.dataset.confirmMessage)) {
          const addressId = this.dataset.deleteAddress;
          const form = document.getElementById('delete-form-' + addressId);
          if (form) {
            form.submit();
          }
        }
      });
    });
  });
</script>

