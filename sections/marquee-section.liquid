      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background/Overlay color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "options": [
        { "value": "text-xl", "label": "Small" },
        { "value": "text-2xl", "label": "Medium" },
        { "value": "text-3xl", "label": "Large" },
        { "value": "text-4xl md:text-5xl", "label": "Extra Large" },
        { "value": "text-5xl md:text-6xl", "label": "Huge" }
      ],
      "default": "text-3xl"
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Animation speed",
      "info": "Lower = faster",
      "min": 5,
      "max": 30,
      "step": 1,
      "default": 10,
      "unit": "s"
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "info": "Set to 0 for no overlay effect",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 70,
      "unit": "%"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "MARQUEE TEXT ✦"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Section",
      "blocks": [
        { "type": "text", "settings": { "text": "GSAP MARQUEE ✦" } },
        { "type": "text", "settings": { "text": "SMOOTH SCROLL ✦" } },
        { "type": "text", "settings": { "text": "SHOPIFY THEME ✦" } },
        { "type": "text", "settings": { "text": "DYNAMIC CONTENT ✦" } }
      ]
    }
  ]
}
{% endschema %}
