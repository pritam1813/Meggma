{% style %}
  /* Fix Shopify breaking <details> layout */
  #accordions details {
    display: flex;
    flex-direction: column;
  }

  /* Fix summary to be horizontal with icon at end */
  #accordions summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  /* Remove default marker/arrow */
  #accordions summary::-webkit-details-marker,
  #accordions summary::marker {
    display: none;
    content: '';
  }

  /* Product notification styles */
  .product-notification {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 9999;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    animation: slideIn 0.3s ease;
    max-width: 400px;
  }

  .product-notification--success {
    background: #16a34a;
    color: white;
  }

  .product-notification--error {
    background: #dc2626;
    color: white;
  }

  .product-notification__close {
    background: transparent;
    border: none;
    color: inherit;
    font-size: 1.5rem;
    cursor: pointer;
    opacity: 0.8;
    line-height: 1;
  }

  .product-notification__close:hover {
    opacity: 1;
  }

  .product-notification--hide {
    animation: slideOut 0.3s ease forwards;
  }

  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideOut {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(100%);
      opacity: 0;
    }
  }
{% endstyle %}

