{%- style -%}
  #scaledown-banner-{{ section.id }} {
    background-color: {{ section.settings.section_bg_color }};
    padding: {{ section.settings.padding }}px;
  }

  #scaledown-banner-{{ section.id }} .banner-container {
    background-color: {{ section.settings.container_bg_color }};
    border-radius: {{ section.settings.border_radius }}px;
  }

  #scaledown-banner-{{ section.id }} .banner-image {
    border-top-left-radius: {{ section.settings.border_radius }}px;
    border-top-right-radius: {{ section.settings.border_radius }}px;
  }

  #scaledown-banner-{{ section.id }} .banner-subheading {
    font-size: {{ section.settings.subheading_font_size }}px;
    color: {{ section.settings.subheading_color }};
  }

  #scaledown-banner-{{ section.id }} .banner-heading {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
  }

  #scaledown-banner-{{ section.id }} .banner-text {
    font-size: {{ section.settings.text_font_size }}px;
    color: {{ section.settings.text_color }};
  }
{%- endstyle -%}

<section id="scaledown-banner-{{ section.id }}" class="h-screen">
  <div class="banner-container w-full h-full overflow-hidden">
    {%- if section.settings.image != blank -%}
      <img
        id="banner-{{ section.id }}"
        class="banner-image w-full h-3/4 object-cover"
        src="{{ section.settings.image | image_url: width: 1920 }}"
        alt="{{ section.settings.image.alt | default: section.settings.heading }}"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        loading="lazy"
      >
    {%- else -%}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'banner-image w-full h-3/4 object-cover' }}
    {%- endif -%}

    <div class="banner-content flex flex-col justify-center items-center space-y-2 h-1/4 px-4">
      {%- if section.settings.subheading != blank -%}
        <p class="banner-subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="banner-heading font-bold">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <p class="banner-text">{{ section.settings.text }}</p>
      {%- endif -%}
    </div>
  </div>
</section>

<script>
  (function () {
    function initScaleDownBannerAnimation() {
      const scaledown = gsap.fromTo(
        '#banner-{{ section.id }}',
        {
          scale: 1.3,
        },
        {
          scale: 1,
          duration: 3,
        }
      );

      ScrollTrigger.create({
        animation: scaledown,
        trigger: '#scaledown-banner-{{ section.id }}',
        scrub: 1,
        start: 'top center',
        end: '+=500',
      });
    }

    // Run when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initScaleDownBannerAnimation);
    } else {
      initScaleDownBannerAnimation();
    }
  })();
</script>

