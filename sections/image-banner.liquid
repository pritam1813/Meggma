{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Dynamic Height Logic */
  .banner-{{ section.id }} {
    --desktop-height: {{ section.settings.desktop_height }}px;
    --mobile-height: {{ section.settings.mobile_height }}px;
    --tint-color: {{ section.settings.tint_color }};
    --tint-opacity: {{ section.settings.tint_opacity | divided_by: 100.0 }};
  }

  .banner-{{ section.id }} .banner-container {
    height: var(--mobile-height);
  }

  @media screen and (min-width: 768px) {
    .banner-{{ section.id }} .banner-container {
      height: var(--desktop-height);
    }
  }

  .banner-{{ section.id }}.banner--full-screen .banner-container {
    height: 100vh;
  }

  .banner-{{ section.id }} .banner-overlay {
    background-color: rgb(from var(--tint-color) r g b / var(--tint-opacity));
  }

  /* Scroll Animations */
  .animate-zoom-out {
    animation: zoomOut 1ms linear both;
    animation-timeline: view();
    animation-range: entry 0% exit 100%;
  }

  @keyframes zoomOut {
    from { transform: scale(1.1); }
    to { transform: scale(1); }
  }

  .animate-slide-up {
    animation: slideUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes slideUp {
    to { opacity: 1; transform: translateY(0); }
  }
{%- endstyle -%}

<div class="banner-{{ section.id }} relative w-full {% unless section.settings.full_width %}max-w-7xl mx-auto px-4 sm:px-6 lg:px-8{% endunless %} section-{{ section.id }}-padding">
  <div class="banner-container relative w-full overflow-hidden isolate {% if section.settings.image_layout == 'full_screen' %}banner--full-screen{% endif %}">
    {%- comment -%} Background Image {%- endcomment -%}
    {%- if section.settings.image != blank -%}
      <div class="banner-media absolute inset-0 w-full z-0 overflow-hidden">
        {%- liquid
          assign mobile_image = section.settings.image_mobile | default: section.settings.image
          assign image_class = 'w-full h-full object-cover'
          if section.settings.image_behavior == 'zoom_out'
            assign image_class = image_class | append: ' animate-zoom-out'
          endif
        -%}

        <picture>
          <source media="(max-width: 767px)" srcset="{{ mobile_image | image_url: width: 800 }}">
          <source media="(min-width: 768px)" srcset="{{ section.settings.image | image_url: width: 1600 }}">
          {{
            section.settings.image
            | image_url: width: 1600
            | image_tag: class: image_class, loading: 'eager', alt: section.settings.image.alt
            | escape
          }}
        </picture>
      </div>
    {%- else -%}
      {%- comment -%} Placeholder {%- endcomment -%}
      <div class="banner-media absolute inset-0 w-full bg-gray-200 z-0 flex items-center justify-center">
        {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-full object-cover opacity-50' }}
      </div>
    {%- endif -%}

    {%- comment -%} Tint Overlay {%- endcomment -%}
    <div class="banner-overlay absolute inset-0 w-full h-full z-10 pointer-events-none"></div>

    {%- comment -%} Top Fade {%- endcomment -%}
    {%- if section.settings.enable_top_fade -%}
      <div
        class="absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-black/50 to-transparent z-10 pointer-events-none"
      ></div>
    {%- endif -%}

    {%- comment -%} Bottom Fade {%- endcomment -%}
    {%- if section.settings.enable_bottom_fade -%}
      <div
        class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-black/50 to-transparent z-10 pointer-events-none"
      ></div>
    {%- endif -%}

    {%- comment -%} Content (Overlay) {%- endcomment -%}
    {%- liquid
      assign justify_class = 'justify-center'
      assign align_class = 'items-center'
      assign text_align_class = 'text-center'

      case section.settings.overlay_position
        when 'top_left'
          assign justify_class = 'justify-start'
          assign align_class = 'items-start'
        when 'top_center'
          assign justify_class = 'justify-center'
          assign align_class = 'items-start'
        when 'top_right'
          assign justify_class = 'justify-end'
          assign align_class = 'items-start'
        when 'middle_left'
          assign justify_class = 'justify-start'
          assign align_class = 'items-center'
        when 'middle_center'
          assign justify_class = 'justify-center'
          assign align_class = 'items-center'
        when 'middle_right'
          assign justify_class = 'justify-end'
          assign align_class = 'items-center'
        when 'bottom_left'
          assign justify_class = 'justify-start'
          assign align_class = 'items-end'
        when 'bottom_center'
          assign justify_class = 'justify-center'
          assign align_class = 'items-end'
        when 'bottom_right'
          assign justify_class = 'justify-end'
          assign align_class = 'items-end'
      endcase

      if section.settings.text_alignment == 'left'
        assign text_align_class = 'text-left'
      elsif section.settings.text_alignment == 'right'
        assign text_align_class = 'text-right'
      endif
    -%}

    {%- unless section.settings.show_text_below_mobile -%}
      <div class="banner-content absolute inset-0 z-20 flex flex-col p-8 md:p-12 {{ justify_class }} {{ align_class }}">
        <div class="max-w-xl w-full {{ text_align_class }}">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'heading' -%}
                <h2
                  class="text-3xl md:text-5xl font-bold mb-4 {% if section.settings.text_animation == 'slide_up' %}animate-slide-up{% endif %}"
                  style="color: {{ section.settings.text_color }};"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading }}
                </h2>
              {%- when 'text' -%}
                <div
                  class="text-lg md:text-xl mb-6 {% if section.settings.text_animation == 'slide_up' %}animate-slide-up{% endif %}"
                  style="color: {{ section.settings.text_color }}; animation-delay: 0.1s;"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </div>
              {%- when 'buttons' -%}
                <div
                  class="flex flex-wrap gap-4 {{ justify_class }} {% if section.settings.text_animation == 'slide_up' %}animate-slide-up{% endif %}"
                  style="animation-delay: 0.2s;"
                  {{ block.shopify_attributes }}
                >
                  {%- if block.settings.button_label_1 != blank -%}
                    <a href="{{ block.settings.button_link_1 }}" class="btn btn-primary">
                      {{ block.settings.button_label_1 }}
                    </a>
                  {%- endif -%}
                  {%- if block.settings.button_label_2 != blank -%}
                    <a href="{{ block.settings.button_link_2 }}" class="btn btn-secondary">
                      {{ block.settings.button_label_2 }}
                    </a>
                  {%- endif -%}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endunless -%}

    {%- if section.settings.image_link != blank -%}
      <a href="{{ section.settings.image_link }}" class="absolute inset-0 z-30"></a>
    {%- endif -%}
  </div>

  {%- comment -%} Mobile Content Below Image {%- endcomment -%}
  {%- if section.settings.show_text_below_mobile -%}
    <div class="md:hidden py-8 px-4 text-center bg-white text-black z-20">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="text-3xl font-bold mb-4" {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h2>
          {%- when 'text' -%}
            <div class="text-lg mb-6" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
          {%- when 'buttons' -%}
            <div class="flex flex-wrap gap-4 justify-center" {{ block.shopify_attributes }}>
              {%- if block.settings.button_label_1 != blank -%}
                <a href="{{ block.settings.button_link_1 }}" class="btn btn-primary">
                  {{ block.settings.button_label_1 }}
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a href="{{ block.settings.button_link_2 }}" class="btn btn-secondary">
                  {{ block.settings.button_label_2 }}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    {%- comment -%} Desktop content still needs to render hiding only on mobile class if strictly responsive logic needed, but standard practice here usually implies structural separation {%- endcomment -%}
    <div class="hidden md:flex banner-content absolute inset-0 z-20 flex-col p-12 {{ justify_class }} {{ align_class }}">
      <div class="max-w-xl w-full {{ text_align_class }}">
        {%- for block in section.blocks -%}
          {%- comment -%} Repeat blocks for desktop view if text_below on mobile is active {%- endcomment -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2 class="text-3xl md:text-5xl font-bold mb-4 text-white" {{ block.shopify_attributes }}>
                {{ block.settings.heading }}
              </h2>
            {%- when 'text' -%}
              <div class="text-lg md:text-xl mb-6 text-white" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            {%- when 'buttons' -%}
              <div class="flex flex-wrap gap-4 {{ justify_class }}" {{ block.shopify_attributes }}>
                {%- if block.settings.button_label_1 != blank -%}
                  <a href="{{ block.settings.button_link_1 }}" class="btn btn-primary">
                    {{ block.settings.button_label_1 }}
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a href="{{ block.settings.button_link_2 }}" class="btn btn-secondary">
                    {{ block.settings.button_label_2 }}
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</div>

